---
import PageLayout from "@/layouts/Base";
import ImageWithBadge from "src/components/ImageWithBadge";
import type { Playlist } from "@/lib/types/spotify";


const playlists: Playlist[] = await (await fetch(import.meta.env.API_URL +'/spotify/playlists/monthly')).json();
const pastPlaylists: Playlist[] = await (await fetch(import.meta.env.API_URL +'/spotify/playlists/years')).json();
const meta = {
  title: "Spotify Jams",
  description: "A collection of monthly liked songs",
};

export const prerender = true
---

<PageLayout meta={meta}>
  <div class="playlists-listing">
    <header class="playlists-header">
      <h1 class="playlists-title">Spotify Jams</h1>
      <p class="playlists-subtitle">A collection of monthly liked songs and musical discoveries</p>
    </header>

    <section class="playlists-section">
      <h2 class="section-title">Year so far...</h2>
      <div class="playlists-grid">
        {playlists.map((playlist) => (
          <article class="playlist-card">
            <a href={`/playlists/${playlist.id}`} class="playlist-link">
              <div class="playlist-card-image">
                <img src={playlist.artwork[0]?.url ?? ""} alt={playlist.name} />
                <div class="playlist-overlay">
                  <div class="playlist-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                  </div>
                </div>
              </div>
              <div class="playlist-card-content">
                <h3 class="playlist-card-title">{playlist.name}</h3>
                <p class="playlist-card-meta">{playlist.tracks.length} tracks</p>
              </div>
            </a>
          </article>
        ))}
      </div>
    </section>

    <section class="playlists-section">
      <h2 class="section-title">Past Jams</h2>
      <div class="playlists-grid">
        {pastPlaylists.map((playlist) => (
          <article class="playlist-card">
            <a href={`/playlists/${playlist.id}`} class="playlist-link">
              <div class="playlist-card-image">
                <img src={playlist.artwork[0]?.url ?? ""} alt={playlist.name} />
                <div class="playlist-overlay">
                  <div class="playlist-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                  </div>
                </div>
              </div>
              <div class="playlist-card-content">
                <h3 class="playlist-card-title">{playlist.name}</h3>
                <p class="playlist-card-meta">{playlist.tracks.length} tracks</p>
              </div>
            </a>
          </article>
        ))}
      </div>
    </section>
  </div>

  <style>
    .playlists-listing {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    .playlists-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .playlists-title {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: var(--theme-text);
      font-family: 'Oswald', sans-serif;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .playlists-subtitle {
      font-size: 1.2rem;
      color: var(--theme-quote);
      font-style: italic;
    }

    .playlists-section {
      margin-bottom: 4rem;
    }

    .section-title {
      font-size: 2rem;
      font-weight: 600;
      margin-bottom: 2rem;
      color: var(--theme-accent);
      font-family: 'Oswald', sans-serif;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .playlists-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 2rem;
    }

    .playlist-card {
      background: var(--theme-bg);
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .playlist-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .playlist-link {
      display: block;
      text-decoration: none;
      color: inherit;
    }

    .playlist-card-image {
      position: relative;
      overflow: hidden;
      aspect-ratio: 1;
    }

    .playlist-card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: grayscale(100%);
      transition: filter 0.3s ease;
    }

    .playlist-card:hover .playlist-card-image img {
      filter: grayscale(0%);
    }

    .playlist-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.7);
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .playlist-card:hover .playlist-overlay {
      opacity: 1;
    }

    .playlist-icon {
      width: 3rem;
      height: 3rem;
      background: #1db954;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
    }

    .playlist-icon svg {
      width: 1.5rem;
      height: 1.5rem;
      margin-left: 2px;
    }

    .playlist-card-content {
      padding: 1.5rem;
    }

    .playlist-card-title {
      margin: 0 0 0.5rem 0;
      font-size: 1.2rem;
      font-weight: 600;
      color: var(--theme-text);
      font-family: 'Oswald', sans-serif;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      line-height: 1.3;
    }

    .playlist-card-meta {
      margin: 0;
      font-size: 0.9rem;
      color: var(--theme-quote);
      font-style: italic;
    }

    @media (max-width: 768px) {
      .playlists-listing {
        padding: 1rem;
      }

      .playlists-title {
        font-size: 2rem;
      }

      .playlists-grid {
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1.5rem;
      }

      .playlist-card-content {
        padding: 1rem;
      }

      .playlist-card-title {
        font-size: 1rem;
      }
    }
  </style>
</PageLayout>
